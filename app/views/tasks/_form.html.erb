<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tittle %>
    <%= form.text_field :tittle, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :deadline_on %>
    <%= form.date_field :deadline_on, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.to_a, { include_blank: "" }, class: "form-control"  %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status,Task.statuses.keys.to_a, { include_blank: "" }, class: "form-control"  %>
  </div>

  <div class="field"><label>ラベル
    <%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
  </label></div>

  <div class="actions text-right">
    <% if task.persisted? %>
      <%= form.submit id:"update-task", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit id:"create-task", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
