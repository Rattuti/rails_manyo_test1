<p id="notice"><%= notice %></p>

<h1><%= t(".tittle")%></h1>

<%= form_with url: tasks_path, method: :get,scope: :search, local:true do |f| %>
  <div class="status_search">
    <%= f.label :status, t("attributes.status")%>
    <%= f.select :status, Task.statuses.keys.to_a, { include_blank: "" }%>
  </div>
  <div class="tittle_search">
    <%= f.label :tittle, t("attributes.tittle")%>
    <%= f.text_field :tittle %>
  </div>
    <%= f.submit "検索",id: "search_task"%>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t("attributes.tittle") %></th>
      <th><%= t("attributes.content") %></th>
      <th><%= link_to t("attributes.deadline_on"), sort_deadline_on: true %></th>
      <th><%= link_to t("attributes.priority"), sort_priority: true %></th>
      <th><%= t("attributes.status") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tittle %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t("tasks.index.show"), task, class:"show_task" %></td>
        <td><%= link_to t("attributes.edit"), edit_task_path(task), class:"edit_task" %></td>
        <td><%= link_to t("tasks.index.destroy"), task, method: :delete, data: { confirm: t("attributes.destroy_confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>